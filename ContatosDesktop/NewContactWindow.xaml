<Window x:Class="ContatosDesktop.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContatosDesktop"
        mc:Ignorable="d"
        Title="Novo Contato" Height="300" Width="300"  WindowStartupLocation="CenterOwner" WindowStyle="None">
    <Grid>
        <StackPanel Margin="10">
            
            <TextBlock Text="Name"/>        
            <TextBox x:Name="nameTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="Celular"/>
            <TextBox x:Name="foneTextBox" Margin="0,0,0,5"/>
            <Button Content="Save" Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Window>
